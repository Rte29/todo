{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>
		<span class="titre">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</span>
	</h1>
{% endblock %}

{% block body %}

	<div class="row">
		<a href="{{ path('task_create') }}" class="btn btn-success col-3" style="box-shadow: 5px 3px 3px grey;">Créer une nouvelle tâche</a>
		<a href="{{ path('task_list_todo') }}" class="btn btn-info col-3" style="box-shadow: 5px 3px 3px grey;">Consulter la liste des tâches à faire</a>
		<a href="{{ path('task_list_isDone') }}" class="btn btn-secondary col-3" style="box-shadow: 5px 3px 3px grey;">Consulter la liste des tâches terminées</a>
	</div>
{% endblock %}
